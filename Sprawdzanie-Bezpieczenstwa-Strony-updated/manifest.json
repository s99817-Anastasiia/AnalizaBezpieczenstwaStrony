{
  "manifest_version": 3,
  "name": "Analiza bezpieczeństwa strony",
  "version": "1.0",
  "description": "Rozszerzenie sprawdza politykę prywatności, cookies, RODO, bezpieczeństwo techniczne, płatności i inne aspekty.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}